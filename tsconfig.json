{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },

    "exclude": ["./node_modules"]
}
